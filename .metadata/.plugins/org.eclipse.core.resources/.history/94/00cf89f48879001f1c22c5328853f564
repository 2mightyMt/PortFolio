    top: 0; /* 스크롤 시 상단에 고정 */
    background-color: #fff; /* 배경색 (필요에 따라 변경) */
    display: flex; /* 가로 정렬을 위해 flex 사용 */
    align-items: center; /* 세로 가운데 정렬 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 그림자 효과 (선택 사항) */
}

